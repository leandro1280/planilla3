<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Dashboard</h1>
                <p class="text-muted mb-0">{{school.name}} - {{currentYear}}</p>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary" id="refreshStats">
                    <i class="bi bi-arrow-clockwise me-1"></i>Actualizar
                </button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#statsModal">
                    <i class="bi bi-graph-up me-1"></i>Ver Estadísticas
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Estadísticas Generales -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{stats.courses}}</h4>
                        <p class="card-text">Cursos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-mortarboard-fill" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{stats.students}}</h4>
                        <p class="card-text">Estudiantes</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-people-fill" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{stats.teachers}}</h4>
                        <p class="card-text">Profesores</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-person-badge-fill" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{generalStats.total_grades}}</h4>
                        <p class="card-text">Calificaciones</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-journal-text" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Distribución TEA/TEP/TED -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Distribución de Calificaciones TEA/TEP/TED</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="p-3">
                            <h2 class="text-success">{{generalStats.tea_percentage}}%</h2>
                            <p class="text-muted mb-0">TEA ({{generalStats.tea_count}})</p>
                            <small class="text-muted">Trabajo Excelente/Avanzado</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <h2 class="text-warning">{{generalStats.tep_percentage}}%</h2>
                            <p class="text-muted mb-0">TEP ({{generalStats.tep_count}})</p>
                            <small class="text-muted">Trabajo En Proceso</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <h2 class="text-danger">{{generalStats.ted_percentage}}%</h2>
                            <p class="text-muted mb-0">TED ({{generalStats.ted_count}})</p>
                            <small class="text-muted">Trabajo En Desarrollo</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cursos -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Cursos del Año {{currentYear}}</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="cycleFilter" id="allCourses" value="all" checked>
                    <label class="btn btn-outline-primary" for="allCourses">Todos</label>
                    
                    <input type="radio" class="btn-check" name="cycleFilter" id="basicoCourses" value="basico">
                    <label class="btn btn-outline-primary" for="basicoCourses">Básico</label>
                    
                    <input type="radio" class="btn-check" name="cycleFilter" id="superiorCourses" value="superior">
                    <label class="btn btn-outline-primary" for="superiorCourses">Superior</label>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="coursesTable">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th>Ciclo</th>
                                <th>Estudiantes</th>
                                <th>Calificaciones</th>
                                <th>TEA</th>
                                <th>TEP</th>
                                <th>TED</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each courses}}
                            <tr data-cycle="{{cycle}}">
                                <td>
                                    <strong>{{name}}</strong>
                                </td>
                                <td>
                                    <span class="badge bg-{{#if (eq cycle 'basico')}}primary{{else}}success{{/if}}">
                                        {{#if (eq cycle 'basico')}}Básico{{else}}Superior{{/if}}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{student_count}}</span>
                                </td>
                                <td>{{total_grades}}</td>
                                <td>
                                    <span class="text-success fw-bold">{{tea_percentage}}%</span>
                                    <small class="text-muted">({{tea_count}})</small>
                                </td>
                                <td>
                                    <span class="text-warning fw-bold">{{tep_percentage}}%</span>
                                    <small class="text-muted">({{tep_count}})</small>
                                </td>
                                <td>
                                    <span class="text-danger fw-bold">{{ted_percentage}}%</span>
                                    <small class="text-muted">({{ted_count}})</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/students?course={{id}}" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-people"></i>
                                        </a>
                                        <a href="/grades?course={{id}}" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-journal-text"></i>
                                        </a>
                                        <a href="/reports?course={{id}}" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-graph-up"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Estadísticas Detalladas -->
<div class="modal fade" id="statsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Estadísticas Detalladas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="statsYear" class="form-label">Año</label>
                        <select class="form-select" id="statsYear">
                            <option value="{{currentYear}}">{{currentYear}}</option>
                            <option value="{{currentYear}}-1">{{currentYear}}-1</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="statsSemester" class="form-label">Cuatrimestre</label>
                        <select class="form-select" id="statsSemester">
                            <option value="">Todos</option>
                            <option value="1">Primer Cuatrimestre</option>
                            <option value="2">Segundo Cuatrimestre</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="button" class="btn btn-primary" id="loadStats">
                            <i class="bi bi-arrow-clockwise me-1"></i>Cargar Estadísticas
                        </button>
                    </div>
                </div>
                
                <div id="statsContent">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2">Cargando estadísticas...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filtro de cursos por ciclo
    const cycleFilters = document.querySelectorAll('input[name="cycleFilter"]');
    const coursesTable = document.getElementById('coursesTable');
    const tableRows = coursesTable.querySelectorAll('tbody tr');

    cycleFilters.forEach(filter => {
        filter.addEventListener('change', function() {
            const selectedCycle = this.value;
            
            tableRows.forEach(row => {
                if (selectedCycle === 'all' || row.dataset.cycle === selectedCycle) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });

    // Botón de actualizar estadísticas
    document.getElementById('refreshStats').addEventListener('click', function() {
        location.reload();
    });

    // Cargar estadísticas en el modal
    document.getElementById('loadStats').addEventListener('click', loadDetailedStats);
    
    // Cargar estadísticas al abrir el modal
    document.getElementById('statsModal').addEventListener('show.bs.modal', loadDetailedStats);

    async function loadDetailedStats() {
        const year = document.getElementById('statsYear').value;
        const semester = document.getElementById('statsSemester').value;
        const content = document.getElementById('statsContent');

        content.innerHTML = `
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2">Cargando estadísticas...</p>
            </div>
        `;

        try {
            const response = await fetch(`/dashboard/stats?year=${year}&semester=${semester}`);
            const data = await response.json();

            if (response.ok) {
                renderDetailedStats(data, content);
            } else {
                content.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Error al cargar las estadísticas: ${data.error}
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error:', error);
            content.innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Error de conexión al cargar las estadísticas.
                </div>
            `;
        }
    }

    function renderDetailedStats(data, container) {
        if (data.subjectStats.length === 0) {
            container.innerHTML = `
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay datos de calificaciones para los filtros seleccionados.
                </div>
            `;
            return;
        }

        const chartData = {
            labels: data.subjectStats.map(s => s.subject.code),
            datasets: [
                {
                    label: 'TEA',
                    data: data.subjectStats.map(s => parseFloat(s.tea_percentage)),
                    backgroundColor: 'rgba(40, 167, 69, 0.8)',
                    borderColor: 'rgba(40, 167, 69, 1)',
                    borderWidth: 1
                },
                {
                    label: 'TEP',
                    data: data.subjectStats.map(s => parseFloat(s.tep_percentage)),
                    backgroundColor: 'rgba(255, 193, 7, 0.8)',
                    borderColor: 'rgba(255, 193, 7, 1)',
                    borderWidth: 1
                },
                {
                    label: 'TED',
                    data: data.subjectStats.map(s => parseFloat(s.ted_percentage)),
                    backgroundColor: 'rgba(220, 53, 69, 0.8)',
                    borderColor: 'rgba(220, 53, 69, 1)',
                    borderWidth: 1
                }
            ]
        };

        container.innerHTML = `
            <div class="row">
                <div class="col-12">
                    <h6>Distribución por Materia - Año ${data.year}${data.semester ? ` - Cuatrimestre ${data.semester}` : ''}</h6>
                    <canvas id="subjectChart" width="400" height="200"></canvas>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Materia</th>
                                    <th>Total</th>
                                    <th>TEA</th>
                                    <th>TEP</th>
                                    <th>TED</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${data.subjectStats.map(s => `
                                    <tr>
                                        <td><strong>${s.subject.code}</strong> - ${s.subject.name}</td>
                                        <td>${s.total_grades}</td>
                                        <td><span class="text-success">${s.tea_percentage}%</span> (${s.tea_count})</td>
                                        <td><span class="text-warning">${s.tep_percentage}%</span> (${s.tep_count})</td>
                                        <td><span class="text-danger">${s.ted_percentage}%</span> (${s.ted_count})</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        `;

        // Crear gráfico
        const ctx = document.getElementById('subjectChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: chartData,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Distribución TEA/TEP/TED por Materia'
                    }
                }
            }
        });
    }
});
</script>