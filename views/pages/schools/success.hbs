<!-- Hero Section -->
<div class="hero-section mb-5">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <div class="hero-content">
                <h1 class="display-4 fw-bold text-gradient mb-3">
                    <i class="bi bi-check-circle text-success me-3"></i>¡Escuela Creada Exitosamente!
                </h1>
                <p class="lead text-muted mb-4">
                    La escuela ha sido configurada correctamente en el sistema
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Información de la Escuela -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-building me-2"></i>Información de la Escuela
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>Nombre:</strong>
                        <p class="text-muted">{{school.name}}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Código de Identificación:</strong>
                        <p class="text-muted"><code>{{school.code}}</code></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Ciudad:</strong>
                        <p class="text-muted">{{school.city}}, {{school.province}}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Tipo:</strong>
                        <p class="text-muted">{{school.school_type}}</p>
                    </div>
                    <div class="col-12 mb-3">
                        <strong>Dirección:</strong>
                        <p class="text-muted">{{school.address}}</p>
                    </div>
                </div>
                
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Próximos pasos:</strong>
                    <ul class="mb-0 mt-2">
                        <li>La escuela ha sido configurada con materias básicas</li>
                        <li>Puedes crear cursos y cargar estudiantes</li>
                        <li>El sistema está listo para usar</li>
                    </ul>
                </div>
                
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/schools" class="btn btn-primary">
                        <i class="bi bi-list me-2"></i>Ver Todas las Escuelas
                    </a>
                    <a href="/dashboard" class="btn btn-outline-primary">
                        <i class="bi bi-house me-2"></i>Ir al Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
